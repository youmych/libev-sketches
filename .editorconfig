# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[**.md]
trim_trailing_whitespace = false

[**.html]
indent_style = tab

# Tab indentation (no size specified)
[{Makefile}]
indent_style = tab

